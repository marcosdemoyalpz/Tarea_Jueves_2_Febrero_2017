<div class="row">
  <form method="post">
    <div class="row">
      <div class="col-lg-12 form-group">
        <label class="form-control-label" for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Name">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 form-group">
        <label for="description">Description</label>
        <textarea type="text" rows="4" class="form-control" id="description" name="description" placeholder="Description"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 form-group">
        <label for="keywords">Keywords</label>
        <input type="text" class="form-control" id="keywords" name="keywords" placeholder="Keywords">
      </div>
    </div>
    <div class="row">
    <div class="col-lg-12">
        <div class="imageupload panel panel-default">
          <div class="panel-heading clearfix">
            <h3 class="panel-title pull-left">Upload Movie Poster Image</h3>
          </div>
          <div class="file-tab panel-body">
              <!-- The file is stored here. -->
              <input type="file" name="image-file">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="container-fluid">        
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>